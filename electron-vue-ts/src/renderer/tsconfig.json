{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "jsx": "react",
    
    "resolveJsonModule": true,
    "target": "es2018",
    "module": "esnext",
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": "../..",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "./**/*"
  ]
}
